<h1>{{title}}</h1>

<div class="text-center">
  <div class="row">
    {{#each course}}
      <div class="col-sm-6 col-lg-3">
        <div class="card mb-4" style=" height:350px">
          <a href="/courses/{{this.slug}}" style="height: 40%">
            <img
              class="card-img-top cover"
              style="height: 100%;"
              src="{{this.image}}"
              alt="Card image cap"
            />
          </a>
          <div class="card-body">
            <a href="/courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>